{
	"configurations": {
    "Python debug: Debug tests": {
      "adapter": "debugpy",
      "filetypes": [ "python" ],
      "configuration": {
        "name": "Debug tests",
        "type": "python",
        "request": "launch",
        "cwd": "./",
        "python": "python",
        "stopOnEntry": true,
        "console": "externalTerminal",
        "debugOptions": [],
        "module": "pytest",
        "args": ["tests"],
        "env": {
          "PYTHONPATH": "./"
        }
      },
      "breakpoints": {
        "exception": {
          "raised" : "N",
          "uncaught": "Y",
          "userUnhandled": "N"
        }
      }
    },
